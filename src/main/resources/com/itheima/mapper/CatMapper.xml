<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.CatMapper">
    <!-- 猫列表动态查询 -->
    <select id="list" resultType="com.itheima.pojo.Cat">
        SELECT * FROM cat
        <where>
            <if test="categoryId != null">
                category_id = #{categoryId}
            </if>
            <if test="gender != null">
                AND gender = #{gender}
            </if>
            <if test="state != null">
                AND state = #{state}
            </if>
        </where>
    </select>

    <!-- 其他猫相关SQL操作 -->
</mapper>